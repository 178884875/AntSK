@namespace AntSK.Pages
@using AntSK.Domain.Repositories
@page "/AppList"
@inject NavigationManager NavigationManager

<PageContainer Title="应用列表">
    <Content>
        <div style="text-align: center;">
            <Search Placeholder="输入回车"
                    EnterButton="@("搜索")"
                    Size="large"
                    Style="max-width: 522px; width: 100%;" />
        </div>
    </Content>
    <ChildContent>
        <div class="cardList">
            <AntList TItem="Apps"
                     DataSource="_data"
                     ItemLayout="ListItemLayout.Horizontal"
                     Grid="_listGridType">
                <ListItem NoFlex>
                    @if (string.IsNullOrEmpty(context.Id))
                    {
                        <Button Type="dashed" class="newButton" @onclick="NavigateToKmsDetail">
                            <Icon Type="plus" Theme="outline" /> 创建应用
                        </Button>
                    }
                    else
                    {
                        <Card Hoverable Bordered Class="card" Actions="_actions" Style="max-height:247px;">
                             <CardMeta>
                                 <AvatarTemplate>
                                     <Avatar Icon="@context.Icon" Style="background-color: #1890ff" />
                                 </AvatarTemplate>
                                 <TitleTemplate>
                                     <a>@context.Name</a>
                                </TitleTemplate>
                                <DescriptionTemplate>
                                    <Paragraph class="item" Ellipsis>
                                     <!--todo: Ellipsis not working-->
                                     @context.Describe
                                    </Paragraph>
                                </DescriptionTemplate>
                            </CardMeta>
                        </Card>
                    }
                </ListItem>
            </AntList>
        </div>
    </ChildContent>
</PageContainer>

@code
{
    private static readonly RenderFragment Operate1 = @<a key="option1">查看</a>;
    private static readonly RenderFragment Operate2 = @<a key="option2">删除</a>;

    private readonly RenderFragment[] _actions =
    {
        Operate1,
        Operate2,
    };

    private void NavigateToKmsDetail()
    {
        NavigationManager.NavigateTo("/app/add");
    }
}
